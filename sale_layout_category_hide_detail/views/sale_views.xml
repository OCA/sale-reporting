<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.hide.detail.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/form//field[@name='name']" position="after">
                <group>
                    <field name="show_details"
                           attrs="{'invisible': [('display_type', '!=', 'line_section')]}"/>
                    <field name="show_price"
                           attrs="{'invisible': [('display_type', '!=', 'line_section')]}"/>
                    <field name="show_subtotal"
                           attrs="{'invisible': ['|', ('display_type', '!=', 'line_section'), ('show_details', '!=', True)]}"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree" position="inside">
                <field name="show_details"
                       widget="boolean_fa_icon"
                       options="{
                            'show_in_line_section': true,
                            'fa_icons': {
                                'icon_true': 'fa-eye',
                                'icon_false': 'fa-eye-slash',
                            },
                            'terminology': {
                                'hover_true': 'Show details',
                                'hover_false': 'Show details',
                            },
                       }"
                       attrs="{'invisible': [('display_type', '!=', 'line_section')]}"/>
                <field name="show_price"
                       widget="boolean_fa_icon"
                       options="{
                            'show_in_line_section': true,
                            'fa_icons': {
                                'icon_true': 'fa-check-circle',
                                'icon_false': 'fa-circle',
                            },
                            'terminology': {
                                'hover_true': 'Show prices',
                                'hover_false': 'Show prices',
                            },
                       }"
                       attrs="{'invisible': ['|', ('display_type', '!=', 'line_section'), ('show_details', '!=', True)]}"/>
                <field name="show_subtotal"
                       widget="boolean_fa_icon"
                       options="{
                            'show_in_line_section': true,
                            'fa_icons': {
                                'icon_true': 'fa-check-circle',
                                'icon_false': 'fa-circle',
                            },
                            'terminology': {
                                'hover_true': 'Show subtotals',
                                'hover_false': 'Show subtotals',
                            },
                       }"
                       attrs="{'invisible': ['|', ('display_type', '!=', 'line_section'), ('show_details', '!=', True)]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/kanban[hasclass('o_kanban_mobile')]/templates" position="before">
                <field name="show_details"/>
                <field name="show_price"/>
                <field name="show_subtotal"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/kanban[hasclass('o_kanban_mobile')]//t[@t-esc='record.name.value']/../.." position="attributes">
                <attribute name="class"/>
                <attribute name="t-attf-class">col-#{record.display_type.raw_value === 'line_section' ? '10' : 12}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/kanban[hasclass('o_kanban_mobile')]//t[@t-esc='record.name.value']/../.." position="after">
                <t t-if="record.display_type.raw_value === 'line_section'">
                    <div class="col-3">
                        <span class="float-right text-right">
                            <span t-attf-class="ml-3 fa #{record.show_details.raw_value ? 'fa-eye' : 'fa-eye-slash'}"
                                  t-att-aria-label="record.show_details.raw_value ? 'Details shown' : 'Details hidden'"/>
                            <span t-if="record.show_details.raw_value"
                                  t-attf-class="ml-3 fa #{record.show_price.raw_value ? 'fa-check-circle' : 'fa-circle'}"
                                  t-att-aria-label="record.show_price.raw_value ? 'Price shown' : 'Price hidden'"/>
                            <span t-if="record.show_details.raw_value"
                                  t-attf-class="ml-3 fa #{record.show_subtotal.raw_value ? 'fa-check-circle' : 'fa-circle'}"
                                  t-att-aria-label="record.show_subtotal.raw_value ? 'Subtotal shown' : 'Subtotal hidden'"/>
                        </span>
                    </div>
                </t>
            </xpath>
        </field>
    </record>
</odoo>
