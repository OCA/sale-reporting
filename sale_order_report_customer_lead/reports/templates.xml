<odoo>

    <template
        id="report_saleorder_document"
        inherit_id="sale.report_saleorder_document"
    >
        <th name="th_quantity" position="after">
            <th name="th_customer_lead" class="text-right">Lead Time</th>
        </th>
        <td name="td_quantity" position="after">
            <td name="td_customer_lead" class="text-right">
                <t t-if="line.customer_lead">
                    <span t-field="line.customer_lead" t-options="{'precision': 0}" />
                    <span>days</span>
                </t>
            </td>
        </td>
    </template>

</odoo>
