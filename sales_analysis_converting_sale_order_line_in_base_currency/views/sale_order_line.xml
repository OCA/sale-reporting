<?xml version="1.0"?>
<openerp>
    <data>

        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <data>

                    <xpath
                        expr="//notebook//tree/field[@name='price_unit']"
                        position="after">
                        <field name="order_line_currency" />
                        <field name="amount_currency_calculated" />
                    </xpath>

                </data>
            </field>
        </record>

    </data>
</openerp>
