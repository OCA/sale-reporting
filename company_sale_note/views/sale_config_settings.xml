<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="sale_config_settings_form_view" model="ir.ui.view">
            <field name="name">Sale settings</field>
            <field name="model">sale.config.settings</field>
            <field name="inherit_id" ref="sales_team.view_sale_config_settings"/>
            <field name="priority" eval="250"/>
            <field name="arch" type="xml">
                <group name="sale_note" position="after">
                    <group name="report_sale_note" string="Sale note">
                        <field name="sale_note_place"/>
                    </group>
                    <group colspan="2" attrs="{'invisible': [('sale_note_place', 'in', ['no', False])]}">
                        <field name="sale_note" nolabel="1" colspan="2"/>
                    </group>
                </group>
            </field>
        </record>
</odoo>
