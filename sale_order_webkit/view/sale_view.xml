<?xml version="1.0"?>
<openerp>
    <data>
        #---------------------------------------------------------------------------------------------------------
        # sale.condition_text
        #---------------------------------------------------------------------------------------------------------
            <record model="ir.ui.view" id="view_sale_condition_webkit">
            <field name="name">sale.condition_text.form</field>
            <field name="model">sale.condition_text_webkit</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="sale condition text">
                    <field name="name" select="1"/>
                    <field name="type" select="1"/>
                    <field name="text" colspan="4"/>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_sale_condition_list_webkit">
            <field name="name">sale.condition_text.list</field>
            <field name="model">sale.condition_text_webkit</field>
            <field name="type">tree</field>
            <field name="priority" eval="6"/>
            <field name="arch" type="xml">
                <tree string="Sale condition text">
                    <field name="name" select="1"/>
                    <field name="type" select="1"/>
                    <field name="text"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_sale_condition_webkit">
            <field name="name">sale.condition_text</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.condition_text_webkit</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_sale_condition_list_webkit"/>
        </record>
        <record model="ir.actions.act_window" id="action_sale_condition_form_webkit">
            <field name="name">sale.condition_text</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.condition_text_webkit</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_sale_condition_webkit"/>
        </record>


        <record model="ir.ui.view" id="sale_form_add_date_sent_methode_webkit">
            <field name="name">sale.sale.form.extra_info_webkit</field>
            <field name="model">sale.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//page[@string='Other Information']/group[3]" position="after" >
                    <separator string="Header and footer" colspan="6"/>
					<newline />
                    <field name="text_condition1_webkit" domain="[('type','=','header')]"
                        on_change="set_comment_webkit(text_condition1_webkit)" colspan="2"/>

                    <field name="text_condition2_webkit" domain="[('type','=','footer')]"
                        on_change="set_note_webkit(text_condition2_webkit)" colspan="2"/>
					<separator string="" colspan="6"/>
                    <newline />
                </xpath>
                <field name="note" position="after">
                    <field name="note1_webkit" colspan="4"/>
                    <field name="note2_webkit" colspan="4"/>
               </field>
            </field>
        </record>
    </data>
</openerp>
