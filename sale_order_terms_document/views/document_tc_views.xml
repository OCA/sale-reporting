<odoo>
    <data>
        <!-- Document Terms and Conditions -->
        <record id="view_document_tc_tree" model="ir.ui.view">
            <field name="name">document.tc.tree</field>
            <field name="model">document.tc</field>
            <field name="arch" type="xml">
                <tree string="Documents">
                    <field name="name" />
                    <field name="active" />
                </tree>
            </field>
        </record>

        <record id="view_document_tc_form" model="ir.ui.view">
            <field name="name">document.tc.form</field>
            <field name="model">document.tc</field>
            <field name="arch" type="xml">
                <form string="Document">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" invisible="1" />
                                <field
                                    widget="binary"
                                    name="document"
                                    filename="name"
                                />
                            </group>
                            <group>
                                <field name="active" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_document_tc">
            <field name="name">Terms and Conditions</field>
            <field name="res_model">document.tc</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a document
              </p>
            </field>
        </record>

        <!-- MENUS -->
        <menuitem
            id="sale_documents_menu"
            name="Documents"
            parent="sale.menu_sale_config"
            sequence="5"
        />

        <menuitem
            action="action_document_tc"
            id="menu_action_document_tc"
            parent="sale_documents_menu"
            sequence="1"
        />

    </data>
</odoo>
