<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sale_report_wizard_view_form" model="ir.ui.view">
    <field name="name">Sale Report Wizard</field>
    <field name="model">sale.report.wizard</field>
    <field name="arch" type="xml">
        <form>
        <group>
        <field name="report" />
        <field name="filter_date_type" />
        <field
                        name="start_date"
                        attrs="{'invisible': [('filter_date_type', '=', False)]}"
                    />
        <field
                        name="end_date"
                        attrs="{'invisible': [('filter_date_type', '=', False)]}"
                    />
        </group>
        <footer>
        <button type="object" name="button_show" string="Show Report" />
        <button special="cancel" string="Cancel" class="btn-secondary" />
        </footer>
        </form>
    </field>
    </record>

</odoo>
