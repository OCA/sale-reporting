<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="report_total_sales_view_pivot" model="ir.ui.view">
            <field name="name">report.all.channels.sales.pivot</field>
            <field name="model">sale.report</field>
            <field name="arch" type="xml">
               <pivot string="Total Sales" disable_linking="True">
                   <field name="team_id" type="col" />
                   <field name="price_total" string="Total Price" type="measure" />
               </pivot>
            </field>
       </record>
        <record id="report_sale_delivered_commands_view_pivot" model="ir.ui.view">
            <field name="name">report_sale_delivered_commands_view_pivot</field>
            <field name="model">sale.report</field>
            <field name="arch" type="xml">
               <pivot string="Quantity Delivered" disable_linking="True">
                   <field name="team_id" type="col" />
                   <field name="product_uom_qty" type="measure" />
               </pivot>
            </field>
       </record>
   
       <record id="report_sale_top_sellers_view_pivot" model="ir.ui.view">
            <field name="name">report_sale_delivered_commands_view_pivot</field>
            <field name="model">sale.report</field>
            <field name="arch" type="xml">
               <pivot string="Top Sellers" disable_linking="True">
                   <field name="team_id" type="col" />
                   <field name="product_id" type="row" />
                   <field name="price_total" type="measure" />
               </pivot>
            </field>
       </record>
   
       <record id="report_top_orders_view_pivot" model="ir.ui.view">
           <field name="name">report_top_orders_view_pivot</field>
           <field name="model">sale.order</field>
           <field name="arch" type="xml">
              <pivot string="Top Orders" disable_linking="True">
                  <field name="name" type="row" />
                  <field name="team_id" type="col" />
                  <field name="amount_total" type="measure" />
              </pivot>
           </field>
      </record>
       <record id="report_confirmed_orders_view_pivot" model="ir.ui.view">
           <field name="name">report_confirmed_orders_view_pivot</field>
           <field name="model">sale.order</field>
           <field name="arch" type="xml">
              <pivot string="Confirmed Orders" disable_linking="True">
                  <field name="team_id" type="col" />
              </pivot>
           </field>
      </record>
   
        <record id="report_total_sales" model="sale.reports.config">
            <field name="name">Total Sales</field>
            <field
                name="view"
            >sale_report_wizard.report_total_sales_view_pivot</field>
            <field name="view_mode">pivot</field>
            <field name="domain" />
            <field name="search_view" />
            <field name="model">sale.report</field>
        </record>
        <record id="report_top_sellers" model="sale.reports.config">
            <field name="name">Top Sellers</field>
            <field
                name="view"
            >sale_report_wizard.report_sale_top_sellers_view_pivot</field>
            <field name="view_mode">pivot</field>
            <field name="domain" />
            <field name="search_view" />
            <field name="model">sale.report</field>
        </record>
        <record id="report_quantity_delivered" model="sale.reports.config">
            <field name="name">Quantity Delivered</field>
            <field
                name="view"
            >sale_report_wizard.report_sale_delivered_commands_view_pivot</field>
            <field name="view_mode">pivot</field>
            <field name="domain" />
            <field name="search_view" />
            <field name="model">sale.report</field>
        </record>
        <record id="report_top_orders" model="sale.reports.config">
            <field name="name">Top Orders</field>
            <field name="view">sale_report_wizard.report_top_orders_view_pivot</field>
            <field name="view_mode">pivot</field>
            <field name="domain">[("amount_total", ">=", "1000")]</field>
            <field name="search_view" />
            <field name="model">sale.order</field>
        </record>
        <record id="report_confirmed_orders" model="sale.reports.config">
            <field name="name">Confirmed Orders</field>
            <field
                name="view"
            >sale_report_wizard.report_confirmed_orders_view_pivot</field>
            <field name="view_mode">pivot</field>
            <field
                name="domain"
            >["|", ("state", "=", "sale"), ("state", "=", "done")]</field>
            <field name="search_view" />
            <field name="model">sale.order</field>
        </record>
    </data>
</odoo>
