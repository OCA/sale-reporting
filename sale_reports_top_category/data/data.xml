<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="report_sales_product_category_view_pivot" model="ir.ui.view">
            <field name="name">report_sales_product_category_view_pivot</field>
            <field name="model">sale.report</field>
            <field name="arch" type="xml">
               <pivot string="Top Orders" disable_linking="True">
                   <field name="top_categ_id" type="row" />
                   <field name="team_id" type="col" />
                   <field name="price_total" type="measure" />
               </pivot>
            </field>
       </record>
        <record id="report_total_sales" model="sale.reports.config">
            <field name="name">Sales by Product Category</field>
            <field
                name="view"
            >sale_reports_top_category.report_sales_product_category_view_pivot</field>
            <field name="view_mode">pivot</field>
            <field name="domain" />
            <field name="search_view" />
            <field name="model">sale.report</field>
        </record>
        
    </data>
</odoo>
